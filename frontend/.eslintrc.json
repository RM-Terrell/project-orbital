{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "parser": "babel-eslint",
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "prefer-destructuring": "off",
        "react/jsx-filename-extension": "off",
        "react/jsx-indent": [
            "error",
            2
        ],
        "react/jsx-max-props-per-line": "off",
        "react/jsx-first-prop-new-line": "off",
        "react/destructuring-assignment": "off",
        "linebreak-style":"off",
        "indent": [
            "error",
            2,
            { "MemberExpression": 1 }
        ],
        "object-shorthand":"off",
        "max-len":[
            "error",
            { "code": 119 }
        ]
    }
}
