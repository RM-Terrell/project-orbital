{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": "off",
        "react/jsx-indent": [
            "error",
            2
        ],
        "linebreak-style":"off",
        "indent": [
            "error",
            2,
            { "MemberExpression": 1 }
        ],
        "max-len":[
            "error",
            { "code": 119 }
        ]
    }
}
